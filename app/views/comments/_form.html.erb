<div id="comment_form">
  <%= form_for [@post, @comment], :remote => true do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br><br>
    <%= f.label :body %><br>
    <%= f.text_area :body %><br>
    <br>
    <%= f.submit "Add Comment", { :class => "btn btn-info"} %>
    <br>
  <% end %>
</div>
