<hr>

    <h5>Name: <%= comment.name %> </h5>
    <h4><%= comment.body %></h4>
    <em><p class="comment_time"><%= time_ago_in_words(comment.created_at) %> ago</p></em>
  
  <% if user_signed_in? %>
    <p><%= link_to 'Delete Comment', [comment.post, comment],
    method: :delete,
    class: "button",
      data: { confirm: 'Are you sure you want to delete this comment?' } %></p>
    <% end %>

<hr>
