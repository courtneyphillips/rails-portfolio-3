<h1 class="title">
  <%= @post.title %>
</h1>
<p class="accent">
  Submitted <%= time_ago_in_words(@post.created_at) %> ago
  | <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
</p>
<br>
<p class="body">
  <%= @post.content %>
</p>
<hr>

<h3>This post has <%= @post.comments.count %> comments:</h3><br>

<%= link_to "Add Comment", new_post_comment_path(@post), id: "new_comment_link", class: "btn btn-info btn-md", remote: true %>

<div id="comments">
  <%= render @post.comments %>
</div>
